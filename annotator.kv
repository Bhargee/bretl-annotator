#:kivy 1.9.0

<ImageDisplay>
    Image:
        id: curr_image
        size: 640, 480
        pos: 450, 300
        source: root.curr_image()

    Label:
        text: 'Grip'
        pos: 200, 200
        font_size: '30sp'

    GridLayout:
        cols: 2
        spacing: 20
        pos: 200,100

        Label:
            text: "Power"
        CheckBox:
            group: 'grip'
            id: power
        Label:
            text: "Tool"
        CheckBox:
            group: 'grip'
            id: tool
        Label:
            text: "3 Jaw Chuck"
        CheckBox:
            group: 'grip'
            id: tjc
        Label:
            text: "Pinch"
        CheckBox:
            group: 'grip'
            id: pinch
        Label:
            text: "Key"
        CheckBox:
            group: 'grip'
            id: key

    Button:
        pos: 650,10
        text: "Save Annotations"
        size: 150,50
        on_press: root.save_annotations()

    Label:
        text: "Comments"
        pos: 400,200
        font_size: '30sp'
    TextInput:
        id: comments
        pos: 370, 100
        size: 500, 100

    Label:
        text: "Instructions"
        pos: 1040, 200
        font_size: '30sp'
    Label:
        text: root._instructions_text
        pos: 1100, 100
        size_hint_y: None
        text_size: 300, None